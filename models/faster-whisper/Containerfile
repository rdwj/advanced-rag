# Faster-Whisper Transcription Service
# UBI9 base for FIPS compliance on OpenShift

FROM registry.redhat.io/ubi9/python-311:latest

USER root

# Install system dependencies
# libsndfile for soundfile library (audio I/O)
# PyAV in requirements.txt provides ffmpeg bindings for format conversion
RUN dnf install -y libsndfile && \
    dnf clean all && \
    rm -rf /var/cache/dnf

WORKDIR /opt/app-root/src

# Copy requirements and install as root (before switching user)
# This avoids permission issues with pip reading the requirements file
COPY requirements.txt .
RUN pip install --no-cache-dir \
    --extra-index-url https://download.pytorch.org/whl/cu121 \
    -r requirements.txt

# Copy application code
COPY src/ ./src/

# Switch to non-root user
USER 1001

# Environment configuration
ENV PYTHONUNBUFFERED=1
ENV MODEL_PATH=/mnt/models
ENV MODEL_SIZE=medium
ENV DEVICE=cuda
ENV COMPUTE_TYPE=float16

# Expose FastAPI port
EXPOSE 8080

# Run the FastAPI server
CMD ["python", "-m", "uvicorn", "src.server:app", "--host", "0.0.0.0", "--port", "8080"]
