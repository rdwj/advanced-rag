# Faster-Whisper Transcription Service
# NVIDIA CUDA base image with cuDNN 9 for GPU inference
# Using CUDA 12.4 with latest cuDNN (includes cuDNN 9.x needed by PyTorch 2.x)

FROM docker.io/nvidia/cuda:12.4.1-cudnn-runtime-ubuntu22.04

# Install Python 3.11 and system dependencies
RUN apt-get update && apt-get install -y \
    python3.11 \
    python3.11-venv \
    python3-pip \
    libsndfile1 \
    ffmpeg \
    && rm -rf /var/lib/apt/lists/* \
    && ln -sf /usr/bin/python3.11 /usr/bin/python3 \
    && ln -sf /usr/bin/python3.11 /usr/bin/python

WORKDIR /opt/app-root/src

# Copy requirements and install dependencies
# Using CUDA 12.4 wheels to match the base image
COPY requirements.txt .
RUN pip install --no-cache-dir \
    --extra-index-url https://download.pytorch.org/whl/cu124 \
    -r requirements.txt

# Copy application code
COPY src/ ./src/

# Create non-root user for OpenShift compatibility
RUN useradd -m -u 1001 appuser && \
    chown -R appuser:appuser /opt/app-root
USER 1001

# Environment configuration
ENV PYTHONUNBUFFERED=1
ENV MODEL_PATH=/mnt/models
ENV MODEL_SIZE=medium
ENV DEVICE=cuda
ENV COMPUTE_TYPE=float16

# Expose FastAPI port
EXPOSE 8080

# Run the FastAPI server
CMD ["python", "-m", "uvicorn", "src.server:app", "--host", "0.0.0.0", "--port", "8080"]
